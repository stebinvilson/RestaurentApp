<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#EFF2FA"
        android:elevation="15dp"
        app:strokeColor="@color/black"
        app:strokeWidth=".3dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/img_restaurent"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:transitionName="fade"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/txt_res_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zesti Arabia"
            android:textSize="20dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            android:fontFamily="@font/chelsea_market"
            android:textStyle="bold" />
            <TextView
                android:id="@+id/res_food_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/inika_bold"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                />
            <RatingBar
                android:id="@+id/res_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:numStars="5"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:progressTint="#FF9801"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/res_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/inika_bold"
                    android:text="Location"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/res_txt_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/chelsea_market"
                    android:text="4.0"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>